<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundTextColor</item>
        <item name="colorPrimaryDark">@color/clickColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom for style filter chips -->
    <style name="CustomChipFilter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@drawable/border_colors</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/whiteColor</item>
    </style>

    <!-- custom text chip -->
    <style name="ChipUncheckedText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@drawable/text_color_chip_state_list</item>
    </style>

    <!-- scrolling toobar in description_frag -->
    <style name="colorToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@color/whiteColor</item>
    </style>

    <!-- changing color bottom line EditText -->
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#d32f2f</item>
        <item name="colorControlActivated">#ff5722</item>
        <item name="colorControlHighlight">#f44336</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
