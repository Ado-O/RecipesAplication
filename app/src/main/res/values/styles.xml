<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- custom for style filter chips -->
    <style name="CustomChipFilter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@drawable/border_colors</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/whiteColor</item>
    </style>

    <!-- custom text chip -->
    <style name="ChipUncheckedText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@drawable/text_color_chip_state_list</item>
    </style>

    <style name="colorToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@color/whiteColor</item>
    </style>
    
    <style name="changeIconLike">
        <item name="android:src">@drawable/change_icon_like</item>
    </style>

</resources>
