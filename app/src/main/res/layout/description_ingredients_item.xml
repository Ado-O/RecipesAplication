<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ingredients"
            type="com.example.adoo.recipesaplication.data.Ingredients"/>
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.adoo.recipesaplication.main.CustomTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{ingredients.name, default="sssss"}'
        android:textColor="@color/darkTextMedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dip"
        app:drawableStartCompat="@drawable/ic_doct"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{ingredients.quantity}"
        android:textColor="@color/clickColor"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
</layout>