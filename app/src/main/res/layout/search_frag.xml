<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.adoo.recipesaplication.main.search.SearchViewModel" />

        <variable
            name="subRecipes"
            type="com.example.adoo.recipesaplication.main.search.SearchViewModel" />

        <variable
            name="items"
            type="java.util.List" />

        <variable
            name="v"
            type="android.view.View" />

        <variable
            name="errorBoolean"
            type="java.lang.Boolean" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/whiteColor">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_simple"
                    style="@style/Theme.App.Base"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_search_black"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/clickColor"
                    android:hint="Type the recipe or word"
                    android:inputType="textCapWords"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </android.support.constraint.ConstraintLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_editSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:paddingBottom="56dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rvError="@{errorBoolean}"
                app:rvRecipe="@{viewModel.mRecipes}"
                app:rvView="@{v}"
                app:subRecipes="@{subRecipes.mSubRecipe}"
                app:searchItem="@{viewModel.mRecipes}" />

            <ImageView
                android:id="@+id/iv_noResultFind"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                app:imageError="@{errorBoolean}"
                app:imageRecipe="@{viewModel.mRecipes}"
                app:layout_constraintBottom_toTopOf="@+id/tv_noResultFind"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_noResultFind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/clickColor"
                android:textSize="20dp"
                app:headerBoolean="@{errorBoolean}"
                app:headerError="@{viewModel.mRecipes}"
                app:layout_constraintBottom_toTopOf="@+id/tv_noResultFindDes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_noResultFind" />

            <TextView
                android:id="@+id/tv_noResultFindDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="@color/darkTextDisabled"
                android:textSize="16dp"
                app:desBoolean="@{errorBoolean}"
                app:desError="@{viewModel.mRecipes}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_noResultFind" />


        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
