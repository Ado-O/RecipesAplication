<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View.OnClickListener" />

        <variable
            name="listener"
            type="com.spartanapp.recipe.chef.util.RecyclerViewClickListener" />

        <variable
            name="recipesViewModel"
            type="com.spartanapp.recipe.chef.main.recipes.RecipesViewModel" />

        <variable
            name="recipes"
            type="com.spartanapp.recipe.chef.data.Recipe" />
    </data>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >

            <ImageView
                android:id="@+id/iv_recipes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="@{(view)-> listener.recyclerViewListClicked(view, recipes)}"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImage="@{recipes.id}"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:background="@drawable/bg_rounded_rectangle"
                android:maxWidth="250dp"
                android:padding="20dp"
                android:text='@{recipes.name}'
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageView
                android:id="@+id/like_recipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:onClick="@{(view)-> listener.favoritesCLickListener(view, recipes)}"
                android:background='@{recipes.like ? @drawable/ic_like_hart_clik : @drawable/ic_like_hart}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blackColor"
                app:frame='@{recipes.lock}'
                android:clickable="true"
                android:alpha="0.5"
                android:onClick="SubRecipe"
                >

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/iv_icon_sub"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_sub_recipe"
                        android:tint="@color/whiteColor"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="SUBSCRIBE TO UNLOCK"
                        android:textColor="@color/whiteColor"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_icon_sub"/>

                </android.support.constraint.ConstraintLayout>
            </FrameLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>
</layout>
